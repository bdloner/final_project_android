<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="kmitl.project.bdloner.moneygrow.CalculatorActivity">

    <Button
        android:id="@+id/btnCalPlus"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/textNote"
        android:background="@drawable/border_cal_symbol"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:text="+" />


    <TextView
        android:id="@+id/numResult"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateText"
        android:background="#ffffff" />

    <EditText
        android:id="@+id/textNote"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="เพิ่มการจดบันทึกเพิ่มเติม"
        android:layout_below="@+id/numResult" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnCalPlus"
        android:background="@drawable/border_cal_num"
        android:text="7"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn7"
        android:background="@drawable/border_cal_num"
        android:text="4"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn4"
        android:background="@drawable/border_cal_num"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn1"
        android:background="@drawable/border_cal_num"
        android:text="."
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnCalMinus"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/textNote"
        android:layout_toEndOf="@+id/btnCalPlus"
        android:layout_toRightOf="@+id/btnCalPlus"
        android:background="@drawable/border_cal_symbol"
        android:text="-"
        android:textColor="@color/colorPrimary"
        android:textSize="35dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btnCalMinus"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:background="@drawable/border_cal_num"
        android:text="8"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btn8"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:background="@drawable/border_cal_num"
        android:text="5"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:background="@drawable/border_cal_num"
        android:text="2"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="@drawable/border_cal_num"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnCalMulti"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/textNote"
        android:layout_toEndOf="@+id/btnCalMinus"
        android:layout_toRightOf="@+id/btnCalMinus"
        android:background="@drawable/border_cal_symbol"
        android:text="x"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btnCalMinus"
        android:layout_toEndOf="@+id/btnCalMinus"
        android:layout_toRightOf="@+id/btnCalMinus"
        android:background="@drawable/border_cal_num"
        android:text="9"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:background="@drawable/border_cal_num"
        android:text="6"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:background="@drawable/border_cal_num"
        android:text="3"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn00"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:background="@drawable/border_cal_num"
        android:textColor="@color/colorPrimary"
        android:text="00"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnCalDiv"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_below="@+id/textNote"
        android:layout_toEndOf="@+id/btnCalMulti"
        android:layout_toRightOf="@+id/btnCalMulti"
        android:background="@drawable/border_cal_symbol"
        android:text="/"
        android:textColor="@color/colorPrimary"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="96dp"
        android:layout_height="106dp"
        android:layout_below="@+id/btnCalMulti"
        android:layout_toEndOf="@+id/btnCalMulti"
        android:layout_toRightOf="@+id/btnCalMulti"
        android:background="#f4795d"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="96dp"
        android:layout_height="106dp"
        android:layout_alignLeft="@+id/btnClear"
        android:layout_alignStart="@+id/btnClear"
        android:layout_below="@+id/btnClear"
        android:background="#73ec75"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnCate"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/btnPoint"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:textSize="20dp"
        android:background="#b34d0d"
        android:text="เลือกประเภทรายรับ"
        android:textColor="#ffffff"/>

    <kmitl.project.bdloner.moneygrow.CustomTextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="วันศุกร์, 3 พฤศจิกายน 2560"
        android:textColor="#ffffff"
        android:textSize="22dp" />


    <!-- #64d200 -->
</RelativeLayout>
