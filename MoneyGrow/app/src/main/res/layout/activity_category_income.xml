<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <kmitl.project.bdloner.moneygrow.CustomTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="กรุณาเลือกประเภทรายจ่าย"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/salaryCat"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/salary" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/salaryCat"
        android:layout_toEndOf="@+id/salaryCat"
        android:layout_toRightOf="@+id/salaryCat"
        android:src="@drawable/border_cal_symbol" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/border_cal_symbol" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/salaryCat"
        android:layout_alignStart="@+id/salaryCat"
        android:layout_below="@+id/salaryCat"
        android:src="@drawable/border_cal_symbol" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:src="@drawable/border_cal_symbol" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/border_cal_symbol" />

</RelativeLayout>