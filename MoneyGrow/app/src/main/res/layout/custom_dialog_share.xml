<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_share_2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_share"
        android:layout_width="256dp"
        android:layout_height="281dp"
        tools:layout_editor_absoluteX="67dp">

        <kmitl.project.bdloner.moneygrow.init.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="คุณทำสำเร็จ !!"
            android:textSize="20dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/customTextView2" />

        <kmitl.project.bdloner.moneygrow.init.CustomTextView
            android:id="@+id/txt_congra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customTextView2"
            android:layout_centerHorizontal="true"
            android:text="ตอนนี้คุณสามารถซื้อรถยนต์ได้แล้ว"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="44dp" />

        <ImageView
            android:id="@+id/img_congra"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/btnYes"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="81dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnNo"
            android:background="#1b58ba"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="แชร์ลง Facebook พร้อมลบรายการ"
            android:textColor="#ffffff"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="170dp"
            android:id="@+id/btnYes" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="13dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="ไม่แชร์ พร้อมลบรายการ"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/btnNo" />


    </RelativeLayout>

</RelativeLayout>