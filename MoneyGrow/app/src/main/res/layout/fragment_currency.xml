<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.project.bdloner.moneygrow.view.CurrencyFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <kmitl.project.bdloner.moneygrow.init.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="แปลงค่าเงินจาก USD เป็นค่าเงินต่างๆทั่วโลก"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="#b34d0d"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">

        <ListView

            android:id="@+id/list_view_currency"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ListView>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
